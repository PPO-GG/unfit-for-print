# ──── nuxt-appwrite module config ────────────────────────────────
# Server-only (admin SDK) — NEVER expose these to the client
NUXT_APPWRITE_API_KEY=
# Admin access is label-based — assign the "admin" label to users in the Appwrite console.
# No team ID or env var required.

# Client-side (public) — these are bundled into client JS, keep non-sensitive
NUXT_PUBLIC_APPWRITE_ENDPOINT=https://api.ppo.gg/v1
NUXT_PUBLIC_APPWRITE_PROJECT_ID=
NUXT_PUBLIC_APPWRITE_DATABASE_ID=

# ──── Game-specific collection IDs ───────────────────────────────
NUXT_PUBLIC_APPWRITE_WHITE_CARD_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_BLACK_CARD_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_LOBBY_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_GAMECARDS_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_PLAYER_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_GAMECHAT_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_GAMESETTINGS_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_SUBMISSION_COLLECTION_ID=
NUXT_PUBLIC_APPWRITE_REPORTS_COLLECTION_ID=

# ──── External services ──────────────────────────────────────────
# Server-only — never prefix with NUXT_PUBLIC_
ELEVENLABS_API_KEY=
OPENAI_API_KEY=

# ──── i18n ────────────────────────────────────────────────────────
NUXT_PUBLIC_TOLGEE_URL=
NUXT_PUBLIC_TOLGEE_DEV_KEY=

# ──── App ─────────────────────────────────────────────────────────
NUXT_PUBLIC_BASE_URL=http://localhost:3000
